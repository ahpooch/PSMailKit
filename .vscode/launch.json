    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug in PowerShell",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "pwsh",
            "args": [
                "-NoExit",
                "-Command",
                "Import-Module \"${workspaceFolder}/bin/Debug/netstandard2.0/publish/PSMailKit.psd1\""
            ],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal", 
            "stopAtEntry": false
        }
    ]
}